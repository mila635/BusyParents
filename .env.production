# Production Environment Variables
# Copy this file to .env.local on your production server and update the values

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-production-secret-here-generate-a-new-one

# Google OAuth (Production)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Database (Production)
DATABASE_URL="postgresql://username:password@host:port/database"
# or for SQLite in production (not recommended)
# DATABASE_URL="file:./prisma/prod.db"

# Google APIs (Production)
GOOGLE_SHEETS_API_KEY=your-production-sheets-api-key
GOOGLE_CALENDAR_API_KEY=your-production-calendar-api-key
GOOGLE_GMAIL_API_KEY=your-production-gmail-api-key

# Webhook Configuration (Production)
WEBHOOK_URL=https://your-domain.com/api/webhook
WEBHOOK_SECRET=your-production-webhook-secret

# Rate Limiting (Production)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging (Production)
NODE_ENV=production
LOG_LEVEL=error

# CORS Configuration (Production)
ALLOWED_ORIGINS=https://your-domain.com

# Email Configuration (Production)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# Security Headers (Production)
CSP_ENABLED=true
HSTS_ENABLED=true

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# Instructions:
# 1. Generate a new NEXTAUTH_SECRET: openssl rand -base64 32
# 2. Update NEXTAUTH_URL to your production domain
# 3. Create new Google OAuth credentials for production domain
# 4. Set up production database (PostgreSQL recommended)
# 5. Configure production Google API keys
# 6. Set up monitoring and error tracking
# 7. Configure email service for notifications
# 8. Test all integrations in staging environment first